# Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_NAME=gemini-2.0-flash-lite

# Flask Settings
FLASK_ENV=development
FLASK_APP=app.py

# Widget / multi-tenant settings
WIDGET_JWT_SECRET=please_change_me
# Optional: Admin API key for protecting management endpoints (/api/add_knowledge, /api/upload_file, /api/fetch_url)
# If set, these endpoints will require X-Admin-API-Key header. Strongly recommended for production.
# ADMIN_API_KEY=your_admin_api_key_here
# Optional: override tenant config location (defaults to ./data/tenants.json)
# TENANT_CONFIG_PATH=/app/data/tenants.json
# Optional: override session TTL (seconds)
# WIDGET_SESSION_TTL_SECONDS=21600
